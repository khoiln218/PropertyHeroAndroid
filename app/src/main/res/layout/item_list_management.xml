<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/management_thumb_side"
                android:layout_height="@dimen/management_thumb_side">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="@dimen/management_thumb_side"
                    android:layout_height="@dimen/management_thumb_side"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emptyimg" />

                <RelativeLayout
                    android:id="@+id/markLayout"
                    android:layout_width="@dimen/management_thumb_side"
                    android:layout_height="@dimen/management_thumb_side"
                    android:background="@color/colorOverlay">

                    <ImageView
                        android:id="@+id/imageMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/title_margin"
                android:paddingBottom="@dimen/title_margin_half">

                <LinearLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingRight="@dimen/title_margin">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/layout_margin_quarter"
                        android:paddingRight="@dimen/layout_margin_quarter"
                        android:text="/"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorTitleText" />

                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/unit_square"
                        android:textColor="@color/colorTitleText"
                        android:textSize="@dimen/text_size_primary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priceLayout"
                    android:layout_marginTop="@dimen/layout_margin_quarter"
                    android:paddingRight="@dimen/title_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorPrimaryText" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginTop="@dimen/title_margin_half"
                    android:paddingRight="@dimen/title_margin"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorSecondaryText" />

                <TextView
                    android:id="@+id/tvNumView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@drawable/ic_drawable_view"
                    android:drawablePadding="@dimen/layout_margin_quarter"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/text_size_secondary" />

                <TextView
                    android:id="@+id/tvNumLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_toRightOf="@+id/tvNumView"
                    android:drawableLeft="@drawable/ic_drawable_like"
                    android:drawablePadding="@dimen/layout_margin_quarter"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTitleText"
                    android:textSize="@dimen/text_size_secondary" />

                <ImageButton
                    android:id="@+id/btnManagementOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/layout_margin_quarter"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_vector_more" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonEnable"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductID"
                android:layout_width="@dimen/management_thumb_side"
                android:layout_height="wrap_content"
                android:background="@color/colorOverlay"
                android:gravity="center"
                android:padding="@dimen/title_margin_half"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_primary" />

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/title_margin_half"
                android:singleLine="true"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
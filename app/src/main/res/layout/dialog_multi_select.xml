<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@color/colorWindowBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="@dimen/title_margin"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white" />

        <ListView
            android:id="@+id/lvMultiSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_quarter"
            android:layout_marginRight="@dimen/layout_margin_quarter"
            android:layout_weight="1" />

        <Button
            android:id="@+id/submitSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_margin="@dimen/layout_margin_quarter"
            android:background="@drawable/blue_gradient_background"
            android:text="@string/btn_choose"
            android:textAllCaps="false"
            android:textColor="@color/colorBlueGradientText" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/closeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_margin_half"
        android:layout_marginRight="@dimen/layout_margin_half"
        android:background="@null"
        app:srcCompat="@drawable/vector_action_close" />
</RelativeLayout>
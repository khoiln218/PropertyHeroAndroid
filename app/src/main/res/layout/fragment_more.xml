<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Account-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/title_margin">

                <LinearLayout
                    android:id="@+id/btnAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="@dimen/ic_avatar_size"
                        android:layout_height="@dimen/ic_avatar_size"
                        android:layout_marginLeft="@dimen/title_margin"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/vector_action_login" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            tools:text="Lê Ngọc Khôi"
                            android:id="@+id/tvFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorTitleText" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/btn_user_info"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_size_secondary"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--Rating-->
            <LinearLayout
                android:id="@+id/btnRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/title_margin">

                <ImageView
                    android:layout_width="@dimen/ic_action_size"
                    android:layout_height="@dimen/ic_action_size"
                    android:layout_marginLeft="@dimen/title_margin"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/vector_action_rating" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/vector_arrow_right"
                    android:singleLine="true"
                    android:text="@string/btn_rating"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTitleText" />
            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--Contact-->
            <LinearLayout
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/title_margin">

                <ImageView
                    android:layout_width="@dimen/ic_action_size"
                    android:layout_height="@dimen/ic_action_size"
                    android:layout_marginLeft="@dimen/title_margin"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/vector_action_contact" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/vector_arrow_right"
                    android:singleLine="true"
                    android:text="@string/btn_contact"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTitleText" />
            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--Management-->
            <LinearLayout
                android:id="@+id/btnManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_margin"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/title_margin">

                <ImageView
                    android:layout_width="@dimen/ic_action_size"
                    android:layout_height="@dimen/ic_action_size"
                    android:layout_marginLeft="@dimen/title_margin"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/vector_action_management" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/vector_arrow_right"
                    android:singleLine="true"
                    android:text="@string/btn_management_product"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTitleText" />
            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />

            <!--Settings-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <include layout="@layout/layout_divider_horizontal" />

                <LinearLayout
                    android:id="@+id/btnSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/title_margin">

                    <ImageView
                        android:layout_width="@dimen/ic_action_size"
                        android:layout_height="@dimen/ic_action_size"
                        android:layout_marginLeft="@dimen/title_margin"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/vector_action_settings" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/vector_arrow_right"
                        android:singleLine="true"
                        android:text="@string/btn_setting"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorTitleText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/layout_progress"
            android:visibility="gone" />
    </FrameLayout>
</androidx.core.widget.NestedScrollView>

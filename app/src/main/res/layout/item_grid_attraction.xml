<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ic_link_width"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/nivNameAttractionNearby"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ic_link_height"
            android:adjustViewBounds="true"
            android:background="@color/colorWindowBackground"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvNameAttractionNearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_background"
            android:gravity="center"
            android:padding="@dimen/layout_margin_quarter"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorBlueGradientText" />
    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/ic_link_width"
        android:layout_height="@dimen/ic_link_height"
        android:adjustViewBounds="true"
        android:background="@color/colorWindowBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/emptyimg" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_half"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layout_margin_half"
        android:paddingRight="@dimen/layout_margin_half"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_size_primary" />
</LinearLayout>
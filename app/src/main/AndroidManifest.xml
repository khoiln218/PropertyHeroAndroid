<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.hellosoft.hellorent">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="vn.hellosoft.hellorent.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="vn.hellosoft.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_app_api" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OnboardingActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="vn.hellosoft.services.RegistrationIntentService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="vn.hellosoft.services.FetchAddressIntentService"
            android:exported="false" />

        <activity
            android:name=".activities.ListViewProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MapViewProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FilterActivity"
            android:label="@string/title_activity_filter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MemberRegistrationActivity"
            android:label="@string/title_activity_member_regis"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.InfoViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreateProductActivity"
            android:label="@string/title_activity_create_product"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginEmailActivity"
            android:label="@string/text_btn_email"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UpdatePhoneNumberActivity"
            android:label="@string/title_update_phone"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AccountDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AccountInfoActivity"
            android:label="@string/btn_user_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:label="@string/btn_change_pws"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FindAreaActivity"
            android:label="@string/title_activity_find_area"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ContactActivity"
            android:label="@string/btn_contact"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Overlay" />
        <activity
            android:name=".activities.AdvDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Overlay" />
        <activity
            android:name=".activities.ImageSliderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GiftCardActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Overlay" />
        <activity
            android:name=".activities.ManagementProductActivity"
            android:label="@string/title_activity_management"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.EditProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/btn_setting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/text_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WarningActivity"
            android:label="@string/text_warning"
            android:screenOrientation="portrait" />

        <!-- Used for install referrer tracking -->
        <receiver
            android:name=".ReferrerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>